                <cell><m>r(x)</m></cell>
              </row>
              <row halign="center">
                <cell><m>2</m></cell>
              </row>
              <row halign="center">
                <cell><m>2.9</m></cell>
              </row>
              <row halign="center">
                <cell><m>2.99</m></cell>
              </row>
              <row halign="center">
                <cell><m>2.999</m></cell>
              </row>
              <row halign="center">
                <cell><m>3</m></cell>
                <cell>undefined</cell>
              </row>
              <row halign="center">
                <cell><m>3.001</m></cell>
              </row>
              <row halign="center">
